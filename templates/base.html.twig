<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="CleanGo vous propose des services de nettoyage professionnel à domicile. Réservez facilement en ligne vos séances de ménage avec des experts qualifiés. Satisfaction garantie.">

		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('styles/app.css') }}">
		{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body class="bg-white">

		<header class="fixed top-0 left-0 right-0 z-50 ">
			<nav
				class="px-6 py-4 flex justify-between items-center backdrop-blur-[4px] bg-white bg-opacity-5 lg:px-20">
				{# Logo #}

				<a href="{{ path('app_home') }}" data-turbo="false" class="flex items-center space-x-2">
					{# <img class="w-[5%]" src="{{ asset('img/logohamza.webp') }}" alt="Logo CleanGo"> #}
					<h1 class="text-xl font-bold text-white">CleanGo</h1>
				</a>


				{# Menu Desktop #}
				<div class="hidden xl:flex items-center space-x-6">
					<a href="{{ path('app_home') }}" data-turbo="false" class="text-white font-semibold hover:text-vertBase transition-all duration-300 whitespace-nowrap">Accueil</a>
					{% if app.user %}
						<a href="{{ path('cleaning_request_create') }}" data-turbo="false" class="text-white hover:text-vertBase font-semibold transition-all duration-300 whitespace-nowrap">Réservez</a>
					{% else %}
						<a href="{{ path('app_register') }}" data-turbo="false" class="text-white hover:text-vertBase font-semibold transition-all duration-300 whitespace-nowrap">Réservez</a>
					{% endif %}
					{% if app.user %}
						<a href="{{ path('cleaning_request_history') }}" data-turbo="false" class="text-white hover:text-vertBase font-semibold transition-all duration-300 whitespace-nowrap">Mes réservations</a>
					{% else %}
						<a href="{{ path('app_register') }}" data-turbo="false" class="text-white hover:text-vertBase font-semibold transition-all duration-300 whitespace-nowrap">S'inscrire</a>
					{% endif %}
					{% if app.user %}
						<a href="{{ path('app_client_index') }}" data-turbo="false" class="text-white hover:text-vertBase font-semibold transition-all duration-300 whitespace-nowrap">{{ app.user.client.firstname }}</a>
						<a href="{{ path('app_logout') }}" data-turbo="false" class="text-red-400 hover:text-red-900 font-semibold transition-all duration-300 whitespace-nowrap">Se déconnecter</a>
					{% else %}
						<a href="{{ path('app_login') }}" data-turbo="false" class="text-white hover:text-vertBase font-semibold transition-all duration-300 whitespace-nowrap">Se connecter</a>
					{% endif %}
				</div>

				{# Bouton Menu Burger #}
				<button id="menu-btn" class="block xl:hidden w-10 h-10 relative focus:outline-none z-[1000] cursor-pointer ">
					<span id="burger-top" class="absolute w-8 h-0.5 bg-vertBase/80 transform transition-all duration-500 -translate-x-1/2 left-1/2"></span>
					<span id="burger-middle" class="absolute w-8 h-0.5 bg-vertBase/80 transform transition-all duration-500 -translate-x-1/2 left-1/2 top-1/2"></span>
					<span id="burger-bottom" class="absolute w-8 h-0.5 bg-vertBase/80 transform transition-all duration-500 -translate-x-1/2 left-1/2"></span>
				</button>

				{# Menu Mobile #}
				<div id="mobile-menu" class="fixed inset-0 min-h-screen w-full bg-white transform translate-x-full transition-transform duration-500 ease-in-out xl:hidden z-[999]">
					<div class="flex flex-col h-full items-center justify-center pt-16">
						<ul class="flex flex-col items-center space-y-8 w-full">
							<li>
								<a href="{{ path('app_home') }}" data-turbo="false" class="text-2xl text-gray-800 hover:text-vertBase transition-all duration-300">Accueil</a>
							</li>
							<li>
								{% if app.user %}
									<a href="{{ path('cleaning_request_create') }}" data-turbo="false" class="text-2xl text-gray-800 hover:text-vertBase transition-all duration-300">Réservez</a>
								{% else %}
									<a href="{{ path('app_register') }}" data-turbo="false" class="text-2xl text-gray-800 hover:text-vertBase transition-all duration-300">Réservez</a>
								{% endif %}
							</li>
							<li>
								{% if app.user %}
									<a href="{{ path('cleaning_request_history') }}" data-turbo="false" class="text-2xl text-gray-800 hover:text-vertBase transition-all duration-300">Mes réservations</a>
								{% else %}
									<a href="{{ path('app_register') }}" data-turbo="false" class="text-2xl text-gray-800 hover:text-vertBase transition-all duration-300">S'inscrire</a>
								{% endif %}
							</li>
							<li>
								{% if app.user %}
									<a href="{{ path('app_client_index') }}" data-turbo="false" class="text-2xl text-gray-800 hover:text-vertBase transition-all duration-300">{{ app.user.client.firstname }}</a>
								{% else %}
									<a href="{{ path('app_login') }}" data-turbo="false" class="text-2xl text-gray-800 hover:text-vertBase transition-all duration-300">Se connecter</a>
								{% endif %}
							</li>
							{% if app.user %}
							<li>
								<a href="{{ path('app_logout') }}" data-turbo="false" class="text-2xl text-red-600 hover:text-red-800 transition-all duration-300">Se déconnecter</a>
							</li>
							{% endif %}
						</ul>
					</div>
				</div>

			</nav>


		</header>



		


