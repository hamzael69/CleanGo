{% extends 'base.html.twig' %}

{% block title %}Mon Profil CleanGo - Gérez vos informations personnelles{% endblock %}

{% block body %}
    <main class="min-h-screen bg-spurs bg-cover bg-center bg-no-repeat pt-10">
        <div class="max-w-4xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
            <div class="bg-white/95 rounded-2xl shadow-xl overflow-hidden">
                <div class="bg-vertBase px-6 py-8">
                    <div class="flex items-center space-x-4">
                        <img src="{{asset('img/user.png')}}" class="h-16 w-16 text-white" alt="Icône profil">
                        <h2 class="text-2xl font-bold text-white">Mon Profil</h2>
                    </div>
                </div>

                <form method="POST" class="px-6 py-8 space-y-8">
                    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                        <div>
                            <label for="firstName" class="block text-base font-medium text-gray-700 mb-2">
                                Prénom
                            </label>
                            <input
                                type="text"
                                name="firstName"
                                id="firstName"
                                value="{{ user.firstName|default('') }}"
                                class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-vertBase focus:ring-vertBase text-base py-3 px-4"
                                placeholder="Jean"
                            >
                        </div>
                        <div>
                            <label for="lastName" class="block text-base font-medium text-gray-700 mb-2">
                                Nom
                            </label>
                            <input
                                type="text"
                                name="lastName"
                                id="lastName"
                                value="{{ user.lastName|default('') }}"
                                class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-vertBase focus:ring-vertBase text-base py-3 px-4"
                                placeholder="Dupont"
                            >
                        </div>
                    </div>

                    <div>
                        <label for="phone" class="block text-base font-medium text-gray-700 mb-2">
                            Numéro de téléphone
                        </label>
                        <div class="mt-1 relative rounded-lg shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                <img src="{{asset("img/tel.png")}}" class="h-6 w-6 text-gray-400" width="24" height="24" />
                            </div>
                            <input
                                type="tel"
                                name="phone"
                                id="phone"
                                value="{{ user.phone|default('') }}"
                                class="pl-12 block w-full rounded-lg border-gray-300 shadow-sm focus:border-vertBase focus:ring-vertBase text-base py-3 px-4"
                                placeholder="06 12 34 56 78"
                            >
                        </div>
                    </div>

                    <div>
                        <div>
                            <label for="address" class="block text-base font-medium text-gray-700 mb-2">
                                Adresse
                            </label>
                            <div class="mt-1 relative rounded-lg shadow-sm">
                                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                    <img src="{{asset("img/epingle.png")}}" class="h-6 w-6 text-gray-400" width="24" height="24"/>
                                </div>
                                <input
                                    type="text"
                                    name="address"
                                    id="address"
                                    value="{{ user.address|default('') }}"
                                    class="pl-12 block w-full rounded-lg border-gray-300 shadow-sm focus:border-vertBase focus:ring-vertBase text-base py-3 px-4"
                                    placeholder="123 rue de la Paix"
                                >
                            </div>
                        </div>
                        <div>
                            <label for="city" class="block text-base font-medium text-gray-700 mb-2">
                                Ville
                            </label>
                            <input
                                type="text"
                                name="city"
                                id="city"
                                value="{{ user.city|default('') }}"
                                class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-vertBase focus:ring-vertBase text-base py-3 px-4"
                                placeholder="Paris"
                            >
                        </div>
                    </div>

                    <div>
                        <label for="description" class="block text-base font-medium text-gray-700 mb-2">Description</label>
                        <textarea id="description" name="description" rows="4"
                                class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-vertBase focus:ring-vertBase text-base py-3 px-4"
                                placeholder="Décrivez votre expérience...">{{ user.description|default('') }}</textarea>
                    </div>

                    <div class="flex justify-end">
                        <button type="submit" class="inline-flex items-center px-8 py-4 border border-transparent rounded-lg shadow-sm text-lg font-medium text-white bg-vertBase hover:bg-opacity-90">
                            <img src="{{asset('img/disquette1.png')}}" class="h-6 w-6 mr-2" alt="Sauvegarder">
                            <span>Mettre à jour</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </main>
{% endblock %}