{% extends 'base.html.twig' %}

{% block title %}Mon Profil CleanGo - Gérez vos informations personnelles{% endblock %}

{% block body %}
    <main class="min-h-screen bg-spurs bg-cover bg-center bg-no-repeat pt-10">
        <div class="min-h-screen bg-black/50 flex items-center justify-center">
            <div class="container mx-auto px-4 py-8">
                <div class="max-w-4xl mx-auto bg-white/90 backdrop-blur-sm rounded-xl shadow-lg p-8">
                    <div class="mb-8">
                        <h2 class="text-2xl font-semibold text-gray-800 text-center">
                            Mon Profil
                        </h2>
                        <p class="text-gray-600 text-center mt-2">
                            Gérez vos informations personnelles
                        </p>
                    </div>

                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                        <div>
                            {{ form_label(form.firstname, 'Prénom', {'label_attr': {'class': 'block text-base font-medium text-gray-700 mb-2'}}) }}
                            {{ form_widget(form.firstname, {'attr': {'class': 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-[#3AA89E] focus:ring-[#3AA89E] text-base py-3 px-4', 'placeholder': 'Jean'}}) }}
                        </div>
                        <div>
                            {{ form_label(form.lastname, 'Nom', {'label_attr': {'class': 'block text-base font-medium text-gray-700 mb-2'}}) }}
                            {{ form_widget(form.lastname, {'attr': {'class': 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-[#3AA89E] focus:ring-[#3AA89E] text-base py-3 px-4', 'placeholder': 'Dupont'}}) }}
                        </div>
                    </div>

                    <div>
                        {{ form_label(form.phone, 'Numéro de téléphone', {'label_attr': {'class': 'block text-base font-medium text-gray-700 mb-2'}}) }}
                        <div class="mt-1 relative rounded-lg shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                <img src="{{asset("img/tel.png")}}" class="h-6 w-6 text-gray-400" width="24" height="24" />
                            </div>
                            {{ form_widget(form.phone, {'attr': {'class': 'pl-12 block w-full rounded-lg border-gray-300 shadow-sm focus:border-[#3AA89E] focus:ring-[#3AA89E] text-base py-3 px-4', 'placeholder': '06 12 34 56 78'}}) }}
                        </div>
                    </div>

                    <div class="space-y-4">
                        <div>
                            {{ form_label(form.adress, 'Adresse', {'label_attr': {'class': 'block text-base font-medium text-gray-700 mb-2'}}) }}
                            <div class="mt-1 relative rounded-lg shadow-sm">
                                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                    <img src="{{asset("img/epingle.png")}}" class="h-6 w-6 text-gray-400" width="24" height="24"/>
                                </div>
                                {{ form_widget(form.adress, {'attr': {'class': 'pl-12 block w-full rounded-lg border-gray-300 shadow-sm focus:border-[#3AA89E] focus:ring-[#3AA89E] text-base py-3 px-4', 'placeholder': '123 rue de la Paix'}}) }}
                            </div>
                        </div>
                        <div>
                            {{ form_label(form.city, 'Ville', {'label_attr': {'class': 'block text-base font-medium text-gray-700 mb-2'}}) }}
                            {{ form_widget(form.city, {'attr': {'class': 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-[#3AA89E] focus:ring-[#3AA89E] text-base py-3 px-4', 'placeholder': 'Paris'}}) }}
                        </div>
                    </div>

                    <div>
                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-base font-medium text-gray-700 mb-2'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-[#3AA89E] focus:ring-[#3AA89E] text-base py-3 px-4', 'rows': '4', 'placeholder': 'Décrivez votre expérience...'}}) }}
                    </div>

                    <div class="flex justify-end">
                        <button type="submit" class="inline-flex items-center px-8 py-4 border border-transparent rounded-lg shadow-sm text-lg font-medium text-white bg-[#3AA89E] hover:bg-opacity-90 transition-colors duration-200">
                            <span>Mettre à jour</span>
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </main>
{% endblock %}