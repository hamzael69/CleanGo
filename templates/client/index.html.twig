{% extends 'base.html.twig' %}

{% block title %}Mon Profil CleanGo - Gérez vos informations personnelles{% endblock %}

{% block body %}
    <main class="min-h-screen bg-spurs bg-cover bg-center bg-no-repeat pt-10">
        <div class="max-w-4xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
            <div class="bg-white/95 rounded-2xl shadow-xl overflow-hidden">
                <div class="bg-vertBase px-6 py-8">
                    <div class="flex items-center space-x-4">
                        <img src="{{asset('img/user.png')}}" class="h-16 w-16 text-white" alt="Icône profil">
                        <h2 class="text-2xl font-bold text-white">Mon Profil</h2>
                    </div>
                </div>

                {{ form_start(form, {'attr': {'class': 'px-6 py-8 space-y-8'}}) }}
                    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                        <div>
                            {{ form_label(form.firstname, 'Prénom', {'label_attr': {'class': 'block text-base font-medium text-gray-700 mb-2'}}) }}
                            {{ form_widget(form.firstname, {'attr': {'class': 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-vertBase focus:ring-vertBase text-base py-3 px-4', 'placeholder': 'Jean'}}) }}
                        </div>
                        <div>
                            {{ form_label(form.lastname, 'Nom', {'label_attr': {'class': 'block text-base font-medium text-gray-700 mb-2'}}) }}
                            {{ form_widget(form.lastname, {'attr': {'class': 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-vertBase focus:ring-vertBase text-base py-3 px-4', 'placeholder': 'Dupont'}}) }}
                        </div>
                    </div>

                    <div>
                        {{ form_label(form.phone, 'Numéro de téléphone', {'label_attr': {'class': 'block text-base font-medium text-gray-700 mb-2'}}) }}
                        <div class="mt-1 relative rounded-lg shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                <img src="{{asset("img/tel.png")}}" class="h-6 w-6 text-gray-400" width="24" height="24" />
                            </div>
                            {{ form_widget(form.phone, {'attr': {'class': 'pl-12 block w-full rounded-lg border-gray-300 shadow-sm focus:border-vertBase focus:ring-vertBase text-base py-3 px-4', 'placeholder': '06 12 34 56 78'}}) }}
                        </div>
                    </div>

                    <div>
                        <div>
                            {{ form_label(form.adress, 'Adresse', {'label_attr': {'class': 'block text-base font-medium text-gray-700 mb-2'}}) }}
                            <div class="mt-1 relative rounded-lg shadow-sm">
                                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                    <img src="{{asset("img/epingle.png")}}" class="h-6 w-6 text-gray-400" width="24" height="24"/>
                                </div>
                                {{ form_widget(form.adress, {'attr': {'class': 'pl-12 block w-full rounded-lg border-gray-300 shadow-sm focus:border-vertBase focus:ring-vertBase text-base py-3 px-4', 'placeholder': '123 rue de la Paix'}}) }}
                            </div>
                        </div>
                        <div>
                            {{ form_label(form.city, 'Ville', {'label_attr': {'class': 'block text-base font-medium text-gray-700 mb-2'}}) }}
                            {{ form_widget(form.city, {'attr': {'class': 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-vertBase focus:ring-vertBase text-base py-3 px-4', 'placeholder': 'Paris'}}) }}
                        </div>
                    </div>

                    <div>
                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-base font-medium text-gray-700 mb-2'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-vertBase focus:ring-vertBase text-base py-3 px-4', 'rows': '4', 'placeholder': 'Décrivez votre expérience...'}}) }}
                    </div>

                    <div class="flex justify-end">
                        <button type="submit" class="inline-flex items-center px-8 py-4 border border-transparent rounded-lg shadow-sm text-lg font-medium text-white bg-vertBase hover:bg-opacity-90">
                            <img src="{{asset('img/disquette1.png')}}" class="h-6 w-6 mr-2" alt="Sauvegarder">
                            <span>Mettre à jour</span>
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </main>
{% endblock %}